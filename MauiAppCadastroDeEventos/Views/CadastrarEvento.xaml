<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCadastroDeEventos.Views.CadastrarEvento"
             Title="CadastroDeEventos"
             NavigationPage.HasNavigationBar="False"
             >


    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,3" EndPoint="1,0">
            <GradientStop Color="black" Offset="0.4"/>
            <GradientStop Color="purple" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10">
        <VerticalStackLayout>
            <Label Text="Cadastro de Eventos"
                FontSize="30"
                Padding="10"
                HorizontalTextAlignment="Center"
                TextColor="{StaticResource White}"
                FontFamily="MerriweatherBlackItalic"/>
        </VerticalStackLayout>
        <Button Text="+ Novo Evento"
                Clicked="Button_Clicked"
                Margin="10"
                FontFamily="MerriweatherBoldItalic"/>

        <Button Text="Lista de Eventos"
                Clicked="Button_Clicked1"
                Margin="10"
                FontFamily="MerriweatherBoldItalic"/>

    </VerticalStackLayout>
    
    
          
</ContentPage>